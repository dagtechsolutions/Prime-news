<%- include('../partials/admin_header', { pageTitle: 'Dashboard' }) %>

<h2>Manage Articles</h2>
<a href="/admin/articles/new" class="btn" style="background-color: #4CAF50; color: white; padding: 10px 15px; text-decoration: none; border-radius: 4px; display: inline-block; margin-bottom: 20px;">Add New Article</a>

<% if (articles && articles.length > 0) { %>
    <table class="admin-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(article => { %>
                <tr>
                    <td><%= article.title %></td>
                    <td><%= article.category %></td>
                    <td><%= new Date(article.date).toLocaleDateString() %></td>
                    <td class="admin-actions">
                        <a href="/article/<%= article.slug %>" target="_blank" class="view-btn" style="background-color: #1976D2; color:white;">View</a>
                        <a href="/admin/articles/edit/<%= article.id %>" class="edit-btn">Edit</a>
                        <form action="/admin/articles/delete/<%= article.id %>?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this article?');">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>No articles found. <a href="/admin/articles/new">Add one now!</a></p>
<% } %>

<%- include('../partials/footer') %>
